{
	"name": "wp-fotokopilot",
	"version": "0.1.0",
	"description": "Desktop app for WordPress media alt-text generation via GitHub Copilot",
	"type": "module",
	"main": "src/main/index.js",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
		"electron:build": "vite build && electron-builder",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint src"
	},
	"dependencies": {
		"@github/copilot-sdk": "^0.1.18",
		"electron-store": "^11.0.2",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"zustand": "^5.0.10"
	},
	"devDependencies": {
		"@vitejs/plugin-react": "^5.1.2",
		"concurrently": "^9.2.1",
		"electron": "^40.0.0",
		"electron-builder": "^26.4.0",
		"eslint": "^9.39.2",
		"msw": "^2.12.7",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"wait-on": "^9.0.3"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"build": {
		"appId": "com.fotokopilot.app",
		"productName": "WP FotoKopilot",
		"directories": {
			"output": "dist-electron"
		},
		"files": [
			"src/main/**/*",
			"src/preload/**/*",
			"dist/**/*"
		],
		"mac": {
			"category": "public.app-category.productivity"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
